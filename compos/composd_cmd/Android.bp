package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

rust_binary {
    name: "composd_cmd",
    srcs: ["composd_cmd.rs"],
    edition: "2021",
    rustlibs: [
        "android.system.composd-rust",
        "libanyhow",
        "libbinder_rs",
        "libclap",
        "libcompos_common",
    ],
    prefer_rlib: true,
    apex_available: [
        "com.android.compos",
    ],
}

rust_test {
    name: "composd_cmd.test",
    srcs: ["composd_cmd.rs"],
    edition: "2021",
    rustlibs: [
        "android.system.composd-rust",
        "libanyhow",
        "libbinder_rs",
        "libclap",
        "libcompos_common",
    ],
    prefer_rlib: true,
    test_suites: ["general-tests"],
}
